//- pugination
mixin pugin()
	.pagination-wrapper
		ul.page-numbers
			mixin li(n)
				li
					if n
						a.page-numbers(href='#')= n 
					else
						block
			+li()
				span.prev.page-numbers
					img(src="img/svg/prev.svg" alt="")
			+li(1)
			+li()
				span.page-numbers.current  2
			+li(3)
			+li()
				span.page-numbers.dots ...
			+li(15)
			+li(16)
			+li()
				a.next.page-numbers(href='#')
					img(src="img/svg/next.svg" alt="")