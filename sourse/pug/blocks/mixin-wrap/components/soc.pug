mixin item-sos(icon, a='#')
	+e.A.item(href= a target="_blank")
		if block
			block
		else
			+icon(icon)
//- social buttons
mixin soc()
	+b.soc
		if block
			block
		else
			+item-sos('vk','https://vk.com/colledgemic')
			+item-sos('fb')
			+item-sos('instagram')

