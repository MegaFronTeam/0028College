mixin mob-mnu()
	+b.menu-mobile--js.d-xl-none
		+b.toggle-menu-mobile--js
			span
		+e.inner
			+mnu()
			.text-right
	//  мобильное меню

mixin top-nav()
	// start top-nav
	+b.top-nav
		.container
			.row
				+e.logo.col-auto
					a(href="/")
						img(src="img/svg/logo.svg", alt="")
				.col-12.d-none.d-xl-block
					+mnu()
				.col.order-first
					.row
						.col-xl
							+e.title.d-none.d-md-block Центральная приемная комиссия
						.col-auto
							+e.tel(href="tel:88006559988")
								+icon('tel')
								| 8 800 655 99 88
						.col-auto
							+e.text Многоканальный c 9:00 до 19:00
				.col-md-auto.order-md-0.order-last
					+e.btn(href="#showquiz") Подобрать программу
				.col-auto.d-xl-none
					+b.toggle-menu-mobile--js
						span
	// end top-nav

